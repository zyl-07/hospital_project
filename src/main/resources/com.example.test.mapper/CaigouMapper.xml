    <select id="selectcaigou" resultType="caigou">
        select cgdno,cgtime,drug.dno,dname,ypnumber,dunit,dclassify,wid,caigou_beizhu,caozuoyuan
        from caigou , drugs
        where cgdno = #{cgdno} and drugs.dno = caigou.dno;
    </select>
    <insert id="addERecord" parameterType="caigou">
        insert into caigou(wid,dname,ypnumber,dunit,dclassify,cgtime,caozuoyuan)
        values(#{wid},#{dno}.#{dname},#{ypnumber},#{dunit},#{dclassify},#{cgtime},#{caozuoyuan});
    </insert>
</mapper>